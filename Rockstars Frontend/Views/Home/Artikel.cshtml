@{
    ViewData["Title"] = "Artikel";
    List<ArtikelModel> artikelen = new List<ArtikelModel>();
    ApiController api = new ApiController();
    await api.ArtikelPaginaAPI();
    artikelen = api.artikelen;
    ArtikelModel artikel = new ArtikelModel();
    Console.WriteLine(ViewData["ID"].ToString());
    foreach (ArtikelModel ar in artikelen)
    {
        if (ar.title.Equals(ViewData["ID"].ToString()))
        {
            artikel = ar;
        }
    }


}

<link rel="stylesheet" href="~/css/_Artikel.css" />

@{ string pdfurl = "https://localhost:6001" + artikel.pdf.url; }

@{ string Imageurl = "https://localhost:6001" + artikel.thumbnail.url;}
<body>
    <div class="row artikelInfo">
        <div class="information">
            <h1>Titel: @artikel.title</h1>
            <h1>Auteur: @artikel.author</h1>
            <h1>Uploaddatum: @artikel.createdDate</h1><br />
            <a href="@pdfurl" download><h2>Download als PDF</h2></a>
        </div>
        <div class="thumbnail">
            <img src="@Imageurl" />
        </div>
    </div>
    <div class="pdfReader">

        <embed src="@pdfurl#view=FitH&scrollbar=0&toolbar=0&statusbar=0&messages=0&navpanes=0" width="100%" height="1000px" />
    </div>


</body>
