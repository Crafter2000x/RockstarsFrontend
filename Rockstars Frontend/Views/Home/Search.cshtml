                                                    </div>
                                                    <div class="modal-body">
                                                        <p style="color: white;">@artikelURL2</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    }
                }
            }
        </div>
    }

    @if (type == "Webinar" || type == "ALL")
    {

        <div class="talks">
            @foreach (var talk in webinars)
            {
                string thumbnailUrl = "https://i479146core.venus.fhict.nl" + talk.Thumbnail.RelativeUrl;
