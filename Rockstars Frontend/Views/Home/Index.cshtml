                                                    <p>@talks[0].Author.Name.ToUpper()</p>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                    @if (talks.Count >= 2)
                                    {
                                        <div class="carousel-item">
                                            @{string Imageurl2 = baseURL + talks[1].Thumbnail.RelativeUrl; }

                                            <a asp-area="" asp-controller="Home" asp-action="OnDemand">
