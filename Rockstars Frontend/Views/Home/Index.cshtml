                            <a type="button" class="btn btn-light text-center mt-auto p-2 MoreArtikelButton" style="" asp-controller="Home" asp-action="OnDemand">Meer Webinars</a>
                        </div>
                        <div class="ArtikelCarousel">
                            <h1 class="text-center">WEBINARS</h1>
                            <div id="Webinars" class="carousel slide" data-ride="carousel" style="height: 84.3%;">
                                <div class="carousel-inner">
                                    @if (talks.Count >= 1)
                                    {
                                        <div class="carousel-item active">
