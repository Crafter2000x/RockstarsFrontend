@using Rockstars_Frontend.Models;
@using System.Linq;

@{
    ViewData["Title"] = "Home Page";
    string baseURL = "https://i479146core.venus.fhict.nl"; // API
    //string websiteURL = "Https://localhost:5001"; // FRONTEND
}

<link rel="stylesheet" href="~/css/HomePage.css" />

<body>
    <div class="PartInformation">
        <div class="InformationPage">
            <div class="container">
                <div class="row">
                    <div class="TextPart">
                        <div class="QuoteText">
                            <h1>HAPPY DEVELOPERS,<br /> HIGH IMPACT.</h1>
                        </div>
                        <div class="InfoText">
                            <p>
                                Wij geloven dat gelukkige developers/engineers de grootste impact maken bij bedrijven, ongeacht het type IT-project,
                                de ambitie van de developer en de vraag van de klant. Daarom zetten we ons in voor 100% <b>DevHappiness:</b> happy developers, high impact.
                            </p>
                        </div>
                    </div>
                    <div class="ImagePart">
                        <img src="~/Images/logo.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="SecondPart">
        <div class="PartOnDemand">
            @{List<ArtikelModel> podcasts = ViewData["podcasts"] as List<ArtikelModel>;}
            @{List<ArtikelModel> artikelen = ViewData["artikelen"] as List<ArtikelModel>;}
            @{List<ArtikelModel> talks = ViewData["talks"] as List<ArtikelModel>;}
            <div class="OnDemandInformation">
                <h1 class="text-center"><b>ROCKSTARS ON DEMAND</b></h1>
                <p class="text-center">On Demand zijn artikelen, webinars en podcasts van onze developers. Zij zijn experts binnen hun vakgebied en delen graag hun kennis met andere programmeurs. Don’t keep it in the bubble, burst it!</p>
            </div>
            @if (artikelen.Count > 0)
            {
                <div class="PartPage ArtikelPart">
                    <div class="row ArtikelSplit">
                        <div class="ArtikelCarousel">
                            <h1 class="text-center">ARTIKELEN</h1>
                            <div id="Artikel" class="carousel slide" data-ride="carousel" style="height: 84.3%;">
                                <div class="carousel-inner">
                                    @if (artikelen.Count >= 1)
                                    {
                                        <div class="carousel-item active">
                                            @{string Imageurl = baseURL + artikelen[0].Thumbnail.RelativeUrl; }

                                            <a asp-action="Artikel" asp-route-title="@artikelen[0].Title">
                                                <img class="d-block w-100" src="@Imageurl" alt="First slide">
                                                <div class="carousel-caption d-none d-md-block">
                                                    <h5>@artikelen[0].Title.ToUpper()</h5>
                                                    <p>@artikelen[0].Author.Name.ToUpper()</p>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                    @if (artikelen.Count >= 2)
                                    {
                                        <div class="carousel-item">
                                            @{string Imageurl2 = baseURL + artikelen[1].Thumbnail.RelativeUrl; }

                                            <a asp-action="Artikel" asp-route-title="@artikelen[1].Title">
                                                <img class="d-block w-100" src="@Imageurl2" alt="Second slide">
                                                <div class="carousel-caption d-none d-md-block">
                                                    <h5>@artikelen[1].Title.ToUpper()</h5>
                                                    <p>@artikelen[1].Author.Name.ToUpper()</p>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                    @if (artikelen.Count >= 3)
                                    {
                                        <div class="carousel-item">
                                            @{string Imageurl3 = baseURL + artikelen[2].Thumbnail.RelativeUrl; }

                                            <a asp-action="Artikel" asp-route-title="@artikelen[2].Title">
                                                <img class="d-block w-100" src="@Imageurl3" alt="Third slide">
                                                <div class="carousel-caption d-none d-md-block">
                                                    <h5>@artikelen[2].Title.ToUpper()</h5>
                                                    <p>@artikelen[2].Author.Name.ToUpper()</p>
                                                </div>
                                            </a>
                                        </div>
                                    }

                                </div>
                                @if (artikelen.Count > 1)
                                {
                                    <a class="carousel-control-prev" href="#Artikel" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#Artikel" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                }

                            </div>
                        </div>
                        <div class="ArtikelInformation d-flex flex-column">
