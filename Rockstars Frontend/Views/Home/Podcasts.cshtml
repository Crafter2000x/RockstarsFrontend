@{
    ViewData["Title"] = "Podcasts";

    List<PodcastModel> podcasts = new List<PodcastModel>();
    ApiController api = new ApiController();
    await api.PodcastAPI();
    podcasts = api.podcasts;
    string baseIP = "https://localhost:6001";
    int id = 1;
}
<link rel="stylesheet" href="~/css/_Podcasts.css" />

<div class="container">
    <row>
        <div class="col-md-12">
            
            
            <div class="podcastbox">
                <div class="widget-share">
                    <a asp-controller="Home" asp-action="Artikel" asp-route-title="#" target="_blank"><i class="fa fa-share" style="color:#ffe000"></i></a>
                </div>
                <a href="#">
                    <img class="thumbnailimage" src="https://uonam1hug0i75oy12t2nhi2t-wpengine.netdna-ssl.com/wp-content/uploads/2019/01/image-placeholder-500x500.jpg" />
                    <div class="podcast-title">Let's talk about all going on</div>

                    <div class="podcast-user user-sm">
                        <span class="userimage pull-left mr">
                            <img class="rounded-circle" src="https://bootdey.com/img/Content/user_1.jpg" alt="...">
                        </span>
                        <h5 class="mt-xs text-light"><span class="fw-semi-bold">Jelle Maas</span></h5>
                        <p class="fs-role text-muted"><span class="fs-role text-muted"><i class="fa fa-tag"></i>&nbsp;Special agent</span></p>
                    </div>
                    <p class="text-light podcast-disc">
                        I'm very sure this isn't going to go well, but here I am still try to test this out and see if it will actually work
                    </p>
                    <ul class="tags text-black-50 pull-right">
                        <li><a href="tribesearch1"></a>Microsoft Tribe</li>
                    </ul>
                    <footer class="podcastboxfooter">
                        <ul class="podcast-links">
                            <li><i class="fa fa-calendar"></i><time>&nbsp;21-5-2021</time>&nbsp;</li>
                            <li><i class="fa fa-hashtag"></i>&nbsp;Add some tags here</li>
                        </ul>
                    </footer>
                </a>
            </div>
            
        </div>
    </row>
</div>





